nodegather() {
  if [ -z $1 ]; then
    echo "Please pass genders compatable node string as first parameter" >&2
    exit 1
  fi
  if ((nodeattr -c $1) > /dev/null 2>&1); then
    nodeattr -c $1 | sed 's/,/\n/g'
  else
    echo "Please pass vaild genders compatable node string as first parameter" >&2
    exit 1
  fi
}

