require 'fileutils'

if `whoami`.chomp != 'root'
  STDERR.puts "Must be run as superuser"
  exit 1
end

unless ARGV[0] == "--noconfirm"
  STDOUT.print "Configure this machine to run alces-overlay? (Y/N): "; STDOUT.flush; res=gets.chomp
else
  res="Y"
end

if res.to_s.upcase == "Y"
  begin
    print "Creating required directories.."
    FileUtils::mkdir_p '/var/lib/alces/nodeware/overlays'
    system "chmod 700 /var/lib/alces/nodeware/overlays"
    puts "OK"
    print "Appending main configuration files.."
    config=<<EOF

-  classname: Alces::Overlay::RepoManager
   enable_repo_execute: true
   repo_paths:
   - /var/lib/alces/nodeware/overlays/

EOF
    a=::File::open('/etc/opt/clusterware/clusterware.yml','a')
    a.puts config
    a.close
    raise "Failed to change ownership on config file" unless system("chmod 700 /etc/opt/clusterware/clusterware.yml")
    raise "Failed to change ownership on log file" unless system("touch /var/log/clusterware/clusterware.log && chmod 700 /var/log/clusterware/clusterware.log")
    puts "OK"
  rescue Exception=>e
    STDERR.puts e.message
    STDERR.puts "Error occured during configuration"
    exit 1
  end
else
  STDOUT.puts "Exit by user request"
end
exit 0
